<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

<addon id="plugin.video.potatoTV" name="Potato TV" version="1.0.5-r1" provider-name="couch potato">
    <requires>
		<import addon="xbmc.python" version="2.14.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.service" library="server.py" start="startup" />
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Potato TV</summary>
		<description lang="en">An unofficial video addon to connect to Stalker Middleware IPTV, based on original code by esxbr (also credits to dara @ IPTV Talk)</description>
		<license>GNU General Public License, v2</license>
		<language></language>
		<forum>https://www.dropbox.com/s/8qdli2bammfbmro/potatoTV.log?raw=true</forum>
	</extension>
</addon>

<addon id="repository.sick-potato" name="couch potato Repository" version="1.0.0" provider-name="couch potato">
    <extension point="xbmc.addon.repository" name="couch potato Add-Ons">
        <info compressed="false">https://raw.githubusercontent.com/sick-potato/potatoTV/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/sick-potato/potatoTV/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.github.com/sick-potato/potatoTV/master</datadir>
    </extension>
    
    <extension point="xbmc.addon.metadata">
        <summary>couch potato Repository</summary>
        <description>Just wanna screw your life dude!</description>
        <platform>all</platform>
    </extension>
</addon>

</addons>
